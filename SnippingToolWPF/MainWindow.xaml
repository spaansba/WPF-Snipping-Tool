<Window x:Class="SnippingToolWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnippingToolWPF" 
        xmlns:fa6="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d" FontSize="13" FontFamily="Segou UI Light"
        Title="Snipping Tool" Height="450" Width="800" 
        Background="#FFF4F4F4">
    <!--https://learn.microsoft.com/en-us/dotnet/desktop/wpf/properties/dependency-property-value-precedence?view=netdesktop-8.0#dependency-property-precedence-list-->
    <Window.Resources>
        <Style x:Key="TopBarButtonStyle" TargetType="local:CustomButton">
            <Setter Property="Background" Value="Transparent"  />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Canvas x:Key="ScreenshotImage" x:Shared="False" Width="30" Height="30">
            <fa6:SvgAwesome Canvas.Left="0" Canvas.Top="8"
                Width="20" Height="20" Icon="Solid_Camera" PrimaryColor="{StaticResource SemiWhite}"/>
            <Rectangle Canvas.Left="5" Canvas.Top="0"
                       Width="25" Height="25"
                       StrokeDashArray="3 3"
                       StrokeThickness="1"
                       Stroke="{StaticResource SemiWhite}"/>
        </Canvas>
    </Window.Resources>
    <!-- Maring/Padding is Left Top Right Bottom -->
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar x:Name="PrimaryTopLeftToolBar" ToolBarTray.IsLocked="True"
                     Background="#202020">
                <local:CustomButton DockPanel.Dock ="Left" Content="Menu" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
            </ToolBar>
            <ToolBar x:Name="PrimaryTopMiddleToolBar" ToolBar.OverflowMode="AsNeeded" 
                     ToolBarTray.IsLocked="True" Background="#202020" Foreground="{StaticResource SemiWhite}">
                <local:CustomButton Content="Pencils" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Shapes" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Stickers" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Text" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
            </ToolBar>
            <ToolBar x:Name="PrimaryTopRightToolBar" ToolBarTray.IsLocked="True"
                     Background="#202020" >
                <local:CustomButton Content="History" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
            </ToolBar>
            <ToolBar x:Name="SecondaryTopLeftToolBar" Band="1" 
                     Background="LightGray" ToolBarTray.IsLocked="True">
                <local:CustomButton Padding="6" Foreground="{StaticResource SemiBlack}" Content="Screenshot" Icon="{StaticResource ScreenshotImage}" IconLocation="Left" Margin="0,0,8,0"/>
                <local:CustomButton Padding="6" Foreground="{StaticResource SemiBlack}" Content="Empty Canvas" Icon="{StaticResource ScreenshotImage}" IconLocation="Left"/>
            </ToolBar>
        </ToolBarTray>
            

        <DockPanel x:Name="PrimaryTopPanel" Background="#202020" DockPanel.Dock="Top" TextElement.Foreground="{StaticResource SemiWhite}">
            <DockPanel.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{StaticResource SemiWhiteColor}"/>
            </DockPanel.Resources>

            <local:CustomButton DockPanel.Dock ="Left" Content="Menu" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>

            <local:CustomButton DockPanel.Dock ="Right" Content="History" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>

     

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!--TODO: Trigger if buttons dont fit, make a dropdown with all buttons that dont fit anymore -->
                <local:CustomButton Content="Pencils" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Shapes" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Stickers" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
                <local:CustomButton Content="Text" Icon="{StaticResource ScreenshotImage}" IconLocation="Top"/>
            </StackPanel>

        </DockPanel>
     

        <DockPanel x:Name="SidePanel" Background="LightGray" DockPanel.Dock="Right" Width="250">

        </DockPanel>
        <DockPanel x:Name="SecondaryTopPanel" Background="LightGray" DockPanel.Dock="Top">
            <local:CustomButton Padding="6" Foreground="{StaticResource SemiBlack}" Content="Screenshot" Icon="{StaticResource ScreenshotImage}" IconLocation="Left" Margin="0,0,8,0"/>
            <local:CustomButton Padding="6" Foreground="{StaticResource SemiBlack}" Content="Empty Canvas" Icon="{StaticResource ScreenshotImage}" IconLocation="Left"/>
            <TextBlock/>
        </DockPanel>

        <TextBlock DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
