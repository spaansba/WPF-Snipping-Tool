                </StackPanel>
            </ControlTemplate>

            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
            </Style>-->

        </ResourceDictionary>
        
    </Application.Resources>


</Application>
