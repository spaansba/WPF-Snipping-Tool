<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SnippingToolWPF">
    <!-- Bind the selected item of the ListBoxITem to the DrawingShape IsSelected -->
    <Style TargetType="{x:Type local:DrawingShape}">
        <Setter Property="IsSelected" Value="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"/>
    </Style>
</ResourceDictionary>