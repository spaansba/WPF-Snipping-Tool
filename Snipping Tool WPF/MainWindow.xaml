<Window x:Class="Snipping_Tool_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snipping_Tool_WPF"
        mc:Ignorable="d" FontSize="13" FontFamily="Segou UI Light"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="400">

    <Window.Resources>
        <Style x:Key="TopBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"  />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>


    <DockPanel x:Name="TopDockPanel">
        <WrapPanel x:Name="ButtonBarLabel" Orientation="Horizontal" Background="#FFF4F4F4"
                    DockPanel.Dock ="Top">

            <!-- New Screenshot button -->
            <Button x:Name="NewScreenshotButton" Style="{StaticResource TopBarButtonStyle}" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\barts\OneDrive\Bureaublad\Resources\NewScreenshot.png"
                           Width="30" Height="30">
                    </Image>
                    <TextBlock Text="New" Padding="5,0" FontWeight="DemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </WrapPanel>
        <StackPanel>
            <!-- Placeholder -->
        </StackPanel>
    </DockPanel>

</Window>
